<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

        <name>Etch</name>

        <description>
            A geo-cache app built for Project Janzoon and Abel Tasman National Park 
        </description>

        <author href="https://build.phonegap.com" email="support@phonegap.com">
            Ben McFetridge, Lars Hopman, Adrian Zafir, Brian Wong, and Simon Wong
        </author>

        <!--  App icon  -->
        <icon src="icon.png" />
        

        <!--  App settings  -->
        <preference name="orientation" value="portait" />
        <preference name="fullscreen" value="true" />

        <preference name="android-minSdkVersion" value="16" />

        <!--    Settings to implement a splash screen    -->
